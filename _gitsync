#compdef gitsync
#autoload

function _unique-merge-candidates() {
    comm -13 \
        <(echo $words | tr ' ' '\n' | sort -u) \
        <(_merge-candidates $dev/$(_infer-repo-dir) | sort -u)
}


function _gs-merge() {
    local candidates 
    candidates=($(_unique-merge-candidates))
    _describe candidates candidates
}

function _gs-checkout() {
    if [ $cur = 2 ]; then
        local candidates 
        candidates=($(_checkout-candidates))
        _describe candidates candidates
    fi
}

function _gitsync() {
    _gs_actions=(merge push swap autocommit checkout)
    if { _gitsync-can-mount }; then
        _gs_actions=($_gs_actions "mount")
    fi
    if { _gitsync-can-dissolve }; then
        _gs_actions=($_gs_actions "dissolve")
    fi
    local cur 
    (( cur = CURRENT - 1 ))
    if [ $cur = 1 ]; then
        _describe _gs_actions _gs_actions
    elif [ $cur -ge 2 ]; then
        case $words[2] in
            merge)
                _gs-merge
                ;;
            checkout)
                _gs-checkout
                ;;
        esac
    fi
}
